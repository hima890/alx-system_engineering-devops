#!/usr/bin/env bash
# Define the port to listen on
PORT=98

# Start listening on the specified port
while true; do
    echo "Waiting for incoming connections on port $PORT..."
    # Use netcat to listen on the specified port
    # -l: listen mode
    # -p: specify the port number
    # -e: execute the specified program after a connection is established
    # In this case, we're using 'cat' to echo back received data
    nc -l -p $PORT -e /bin/cat
done
